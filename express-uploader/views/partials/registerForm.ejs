<h1>Signup</h1>
<form method="POST" action="/api/register" enctype="multipart/form-data">
  <div class="form-group">
    <label for="email">Username</label>
    <input name="user[username]" placeholder="Username" class="form-control">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input name="user[email]" placeholder="Email" class="form-control">
  </div>
  <div class="form-group">
    <label for="avatar">Avatar</label>
    <input type="file" name="avatar">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="user[password]" placeholder="Password" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Confirm Password</label>
    <input type="password" name="user[passwordConfirmation]" placeholder="Confirm Password" class="form-control">
  </div>

  <button class="btn btn-primary">Signup</button>
</form>